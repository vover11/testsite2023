                                <script src="node_modules/intersection-observer/intersection-observer.js"></script>
                                <script>
                                    const cardFronts = document.querySelectorAll('.card-front');

                                    // Функция для проверки, находится ли элемент в видимой области окна браузера
                                    function isElementInViewport(el) {
                                        const rect = el.getBoundingClientRect();
                                        return (
                                            rect.top >= 0 &&
                                            rect.left >= 0 &&
                                            rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                                            rect.right <= (window.innerWidth || document.documentElement.clientWidth)
                                        );
                                    }

                                    // Функция для обработки скролла
                                    function handleScroll() {
                                        cardFronts.forEach(cardFront => {
                                            if (isElementInViewport(cardFront)) {
                                                cardFront.style.animationPlayState = 'running'; // Запускаем анимацию градиента
                                            } else {
                                                cardFront.style.animationPlayState = 'paused'; // Останавливаем анимацию градиента
                                            }
                                        });
                                    }

                                    // Добавляем слушатель события скролла
                                    window.addEventListener('scroll', handleScroll);
                                </script>
